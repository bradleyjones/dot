URxvt.iso14755: false
URxvt.perl-ext-common:  default,clipboard,font-size

! Copy and Paste
URxvt.keysym.C-C:   perl:clipboard:copy
URxvt.keysym.C-V:   perl:clipboard:paste

! Change font size
URxvt.keysym.C-Up:     perl:font-size:increase
URxvt.keysym.C-Down:   perl:font-size:decrease
URxvt.keysym.C-S-Up:   perl:font-size:incsave
URxvt.keysym.C-S-Down: perl:font-size:decsave

! Transparent
URxvt*transparent: false
URxvt*fading: 2%
URxvt*fadeColor: grey
URxvt*shading: 75

! Compile xft: Attempt to find a visual with the given bit depth; option -depth.
URxvt*depth: 32

! Compile xft: Turn on/off double-buffering for xft (default enabled).  On some card/driver
URxvt*buffered: true

! Use the specified colour as the windows background colour [default White]; option -bg.
URxvt*background: rgba:0000/0000/0000/dddd

! Use the specified colour as the windows foreground colour [default Black]; option -fg.
URxvt*foreground: #909090

! True: enable the scrollbar [default]; option -sb. False: disable the scrollbar; option
URxvt*scrollBar: false

!-- Xft settings -- !
Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintfull


! -- FONTS -- !
URxvt.font:	-misc-fixed-medium-r-normal--14-130-75-75-c-70-iso8859-1
!URxvt.boldfont: xft:Monospace-Bold:pixelsize=15
